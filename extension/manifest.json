{
    "manifest_version": 3,
    "name": "joyboy-extractor",
    "version": "1.0.0",
    "description": "Deep DOM analysis tool - extract and analyze CSS classes, HTML structure, and component patterns",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "downloads"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "joyboy-extractor",
        "default_popup": "popup.html",
        "default_icons": {
            "16": "images/icon-16.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        }
    },
    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "result-viewer.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}