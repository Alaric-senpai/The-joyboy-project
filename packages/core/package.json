    "manga",
    "parser",
    "core",
    "sdk"
  ],
  "license": "MIT",
  "dependencies": {
    "@joyboy/types": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@joyboy/types": "^1.0.0"
  }
