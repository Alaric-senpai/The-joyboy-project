{
  "name": "@joyboy-parser/core",
  "version": "1.1.6",
  "type": "module",
  "description": "Core SDK and runtime for the JoyBoy parser ecosystem",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
