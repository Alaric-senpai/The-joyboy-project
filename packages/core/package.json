  "author": "alaric-senpai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Alaric-senpai/The-joyboy-project.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/Alaric-senpai/The-joyboy-project#readme",
  "bugs": {
    "url": "https://github.com/Alaric-senpai/The-joyboy-project/issues"
  },
  "dependencies": {
    "@joyboy-parser/source-registry": "workspace:*",
    "@joyboy-parser/types": "workspace:*",
    "axios": "^1.13.2",
    "fast-xml-parser": "^5.3.3",
    "linkedom": "^0.18.12"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
