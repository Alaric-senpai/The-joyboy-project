{
  "name": "@joyboy/core",
  "version": "1.0.0",
  "type": "module",
  "description": "Core SDK and runtime for the JoyBoy parser ecosystem",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
